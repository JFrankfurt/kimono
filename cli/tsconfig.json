{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "../typings/**/*.ts",
    "node_modules/kimono-js/**/*.ts"
  ]
}
